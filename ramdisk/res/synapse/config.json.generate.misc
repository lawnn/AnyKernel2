`
if [ -f "/sys/kernel/mm/uksm/run" ]; then
    echo '{ SCheckBox:{
              label:"Ultimate Kernel Samepage Merging",
              description:"UKSM combines duplicate memory pages of different processes to possibly improve usage/performance of system memory.",

          { SOptionList:{
              title:"CPU Governor",
              action:"bracket-option /sys/kernel/mm/uksm/cpu_governor",
              values:[
    ';
    for UKSMGOV in $(cat /sys/kernel/mm/uksm/cpu_governor | sed -e 's/\]//;s/\[//'); do
